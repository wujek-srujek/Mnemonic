<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MnemonicTheme" parent="android:Theme.Material.NoActionBar">
        <item name="android:toolbarStyle">@style/MnemonicToolbarStyle</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="textAppearanceExtraLarge">@style/MnemonicTextAppearance.ExtraLarge</item>
        <item name="floatingActionButtonStyle">@style/MnemonicFabStyle</item>
    </style>

    <style name="MnemonicFabStyle" parent="android:Widget.ImageButton">
        <item name="android:background">@drawable/ripple</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="MnemonicToolbarStyle" parent="android:Widget.Toolbar">
        <item name="android:background">?android:attr/colorPrimary</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="MnemonicFilePickerTheme" parent="android:Theme.Material"/>

    <style name="MnemonicTextAppearance.ExtraLarge" parent="android:TextAppearance.Large">
        <item name="android:textSize">25sp</item>
    </style>

</resources>
