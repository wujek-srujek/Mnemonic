<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MnemonicTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:toolbarStyle">@style/MnemonicToolbarStyle</item>
        <item name="drawerArrowStyle">@style/MnemonicDrawerArrowToggleStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/MnemonicActionOverflowStyle</item>
        <item name="android:editTextStyle">@style/MnemonicEditTextStyle</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="textAppearanceExtraLarge">@style/MnemonicTextAppearance.ExtraLarge</item>
    </style>

    <style name="MnemonicToolbarStyle" parent="android:Widget.Toolbar">
        <item name="android:background">?android:attr/colorPrimary</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="MnemonicDrawerArrowToggleStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">?android:attr/textColorPrimary</item>
        <item name="spinBars">false</item>
    </style>

    <style name="MnemonicActionOverflowStyle" parent="android:Widget.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>

    <style name="MnemonicEditTextStyle" parent="android:Widget.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">@dimen/spacing_big</item>
    </style>

    <style name="MnemonicTextAppearance.ExtraLarge" parent="android:TextAppearance.Large">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="MnemonicSingleLineTextStyle" parent="android:TextAppearance.Medium">
        <item name="android:singleLine">true</item>
    </style>

</resources>
